#include <iostream>
#include <string>
using namespace std;

int main()
{
    string s;
    cin >> s;
    int sum = int(s.length());
    for (int i = 1; i < int(s.length()); i++)
    {
        if (s[i] == '-' || s[i] == '=' 
            || s[i-1] == 'l' && s[i] == 'j'
            || s[i-1] == 'n' && s[i] == 'j')
        {
            sum -= 1;
        }
    }
    for (int j = 2; j < int(s.length()); j++)
    {
        if (s[j-2] == 'd' && s[j-1] == 'z' && s[j] == '=')
        {
            sum -= 1;
        }
    }
    cout << sum;
}
